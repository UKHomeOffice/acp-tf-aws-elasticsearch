#!/bin/bash

curl -XPUT -u "${es_user}:${es_pass}" "https://${aws_es_endpoint}/_opendistro/_ism/policies/ism-policy" -H 'Content-Type: application/json' -d '
{
    "policy": {
        "description": "ism policy to rollover/delete indices breaching a certain size or time. rollover defaults to 75GB and 1 day old. Delete defaults  to 7 days",
        "default_state": "hot",
        "states": [
        {
            "name": "hot",
            "actions": [
                {
                    "rollover": {
                        "min_size": "${index_rollover_size}",
                        "min_index_age": "${index_rollover_age}"
                    }
                }
            ],
            "transitions": [
                {
                    "state_name": "delete",
                    "conditions": {
                        "min_index_age": "${index_retention}"
                    }
                }
            ]
        },
        {
            "name": "delete",
            "actions": [
                {
                    "delete": {}
                }
            ],
            "transitions": []
        }
    ],
        "ism_template": {
            "index_patterns": [
            %{ for cluster, index_list in indices }
            %{ for index in index_list }
            "${cluster}-${index}",
            %{ endfor ~} 
            %{ endfor ~}
            ]
        }
    }
}
'
%{ for cluster, index_list in indices }
%{ for index in index_list }
curl -XPUT -u "${es_user}:${es_pass}" "https://${aws_es_endpoint}/_template/${cluster}-${index}-template" -H 'Content-Type: application/json' -d '
{
    "index_patterns" : ["${cluster}-${index}-*"],
    "settings" : {
        "number_of_shards": "${index_shard_count}",
        "refresh_interval": "${index_refresh_interval}",
        "number_of_replicas": "${index_replica_count}",
        "opendistro.index_state_management.rollover_alias": "${cluster}-${index}"
    }
}
'
curl -XPUT -u "${es_user}:${es_pass}" "https://${aws_es_endpoint}/${cluster}-${index}-000001"
curl -XPUT -u "${es_user}:${es_pass}" "https://${aws_es_endpoint}/${cluster}-${index}-000001/_aliases/${cluster}-${index}" -d '{ "is_write_index" : "true" }' -H 'Content-Type: application/json'
curl -XPOST -u "${es_user}:${es_pass}" "https://${aws_es_endpoint}/_opendistro/_ism/add/${cluster}-${index}" -d '{"policy_id": "ism-policy"}'  -H 'Content-Type: application/json'
%{ endfor ~}
%{ endfor ~}