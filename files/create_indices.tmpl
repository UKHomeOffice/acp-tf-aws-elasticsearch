curl -XPUT -u "${es_user}:${es_pass}" "https://${aws_es_endpoint}/_opendistro/_ism/policies/large-index-policy" -H 'Content-Type: application/json' -d '
{
    "policy": {
        "description": "ism policy to rollover/delete indices breaching a certain size or time. rollover defaults to 75GB and 1 day old. Delete defaults  to 7 days",
        "default_state": "hot",
        "states": [
        {
            "name": "hot",
            "actions": [
                {
                    "rollover": {
                        "min_size": "${large_index_rollover_size}",
                        "min_index_age": "${large_index_rollover_age}"
                    }
                }
            ],
            "transitions": [
                {
                    "state_name": "delete",
                    "conditions": {
                        "min_index_age": "${large_index_retention}"
                    }
                }
            ]
        },
        {
            "name": "delete",
            "actions": [
                {
                    "delete": {}
                }
            ],
            "transitions": []
        }
    ],
        "ism_template": {
            "index_patterns": [
            %{ for index in large_index_list }
            "${index}",
            %{ endfor ~}
            ""
            ]
        }
    }
}
'
